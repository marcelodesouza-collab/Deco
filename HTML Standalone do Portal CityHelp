      // My Reports Component
      const MyReportsView = () => {
        const getStatusColor = (status) => {
          switch (status) {
            case 'Resolvido': return 'bg-green-100 text-green-800';
            case 'Em AnÃ¡lise': return 'bg-yellow-100 text-yellow-800';
